@model IEnumerable<CiroKebab.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}
<style>
    body{
        background-color: #ff6a00;
    }
</style>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script type="text/javascript">
    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": true,
        "positionClass": "toast-top-center",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    };
    @if (TempData["AddCart"] != null)
    {
        <text>
    toastr.info('@TempData["AddCart"]');
        </text>
    }
    @if (TempData["Ordine"] != null)
    {
        <text>
    toastr.info('@TempData["Ordine"]');
        </text>
    }

</script>

<div class="container">
    <h1 class="text-center my-3 titolo-prodotti bg-dark rounded">Pizza TheRock - Le nostre pizze </h1>
    @if (User.IsInRole("Admin"))
    {
        <p class="btn btn-warning fw-bold">
            @Html.ActionLink("Inserisci nuovo prodotto", "Create", new { }, new { @class = "text-decoration-none text-white" })
        </p>
    }

    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-4 gy-4">
                <div class="card h-100 w-100" alt="...">
                    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Content/@item.Foto" class="d-block w-100" style="height: 295px;" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/@item.Foto2" class="d-block w-100" style="height: 295px;" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/@item.Foto3" class="d-block w-100" style="height: 295px;" alt="...">
                            </div>
                        </div>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title text-uppercase bg-warning text-white rounded-pill text-center py-2">@item.Nome</h5>
                        <hr />
                        <p class="card-text fw-bold ">Prezzo: @item.Prezzo.ToString("F2") €</p>
                        <p class="card-text fw-bold">Consegna: @item.Consegna minuti</p>
                        <p class="card-text fw-bold text-truncate">Ingredienti: @item.Ingredienti</p>


                        @using (Html.BeginForm("AddToCart", "Prodotti", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.idProdotto" />
                            <label for="Quantita" class="fw-bold">Quantità:</label>
                            <input id="Quantita" type="number" name="quantita" value="1" min="1" max="30">
                            <br />
                            <input type="submit" value="Aggiungi al carrello" class="btn btn-success mt-3">
                        }
                        @if (User.IsInRole("Admin"))
                        {
                          
                            <a href="@Url.Action("Delete", "Prodotti", new { id=item.idProdotto })" class="btn btn-danger mt-3">Elimina Prodotto</a>
                        }
                    </div>
                </div>
            </div>

            if ((Model.ToList().IndexOf(item) + 1) % 3 == 0)
            {
            @:</div><div class="row">
            }
        }
    </div>
</div>
